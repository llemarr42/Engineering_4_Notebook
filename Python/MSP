def everything(misses, guessed):
    if misses > 0:
        print("---┐ ")
    if misses > 1:
        print("   O" )
    if misses == 3:
        print("   | ")
    if misses == 4:
        print("  \| ")
    if misses > 4:
        print("  \|/ ")
    if misses > 5:
        print("   |")
    if misses == 7:
        print("   / " )
    if misses > 7:
        print("  / \ ")
    dashes = ("_") * len(word)
    PrettyDash=" ".join(dashes)
    print( PrettyDash+"\n")
    print("Guessed Words:\t" + str(guessed))

misses=0
correct=0
txt=input("Player1, what's the word:")
while True:
    print("\n" * 50)
    if " " in txt:
        print("please enter one word")
        txt=input("Player1, what's the word:")
    else:
        break
length = len(txt)
word = [char for char in txt]
print("\n" * 50)
guessed = ""
everything(misses, guessed)
while misses <=7:
    guess=input("Player2, guess a letter:")
    guessed = list(guessed)
    if guess in guessed:
        print("you already guessed:" + guess)
    elif guess in word:
        guessed.append(guess)
        correct = correct + 1
        print("remember to add the code here:")
    else:
        misses = misses + 1
        guessed.append(guess)
        everything(misses, guessed)
    if correct == length: ##Broken Code
        print("Congratulations, Player2 wins!!!") ##Broken Code
        print("The word was:\t" + str(word)) ## Broken Code
        break
    
if misses >7:
    print("Game Over")
