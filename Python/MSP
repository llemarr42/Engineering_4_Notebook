def everything(misses, guessed, PrettyDash, cguess):
    if misses > 0:
        print("---┐ ")
    if misses > 1:
        print("   O" )
    if misses == 3:
        print("   | ")
    if misses == 4:
        print("  \| ")
    if misses > 4:
        print("  \|/ ")
    if misses > 5:
        print("   |")
    if misses == 7:
        print("   / " )
    if misses > 7:
        print("  / \ ")
    print("Guessed Words:\t" + str(guessed))
    for place in range(len(word)):
        if word[place] in cguess: 
            PrettyDash = PrettyDash[:place] + word[place] + PrettyDash[place+1:]
    PrettyDash = " ".join(PrettyDash)
    print( PrettyDash+"\n")
misses=0
correct=0
txt=input("Player1, what's the word:")
while True:
    print("\n" * 50)
    if " " in txt:
        print("please enter one word")
        txt=input("Player1, what's the word:")
    else:
        break
length = len(txt)
uni = len(set(txt))
word = [char for char in txt]
print("\n" * 50)
guessed = ""
cguess = ""
guess = ""
PrettyDash= ("_") * len(word)
#PrettyDash=" ".join(dashes)
everything(misses, guessed, PrettyDash, cguess)
while misses <=7:
    guess=input("Player2, guess a letter:")
    guessed = list(guessed)
    if guess in guessed:
        print("\n" * 50)
        print("you already guessed:" + guess)
        everything(misses, guessed, PrettyDash, cguess)
    elif guess in word:
        print("\n" * 50)
        guessed.append(guess)
        correct = correct + 1
        cguess = cguess + guess
        everything(misses, guessed, PrettyDash, cguess)
    else:
        print("\n" * 50)
        misses = misses + 1
        guessed.append(guess)
        everything(misses, guessed, PrettyDash, cguess)
    if  correct == uni: ##Broken Code
        print("Congratulations, Player2 wins!!!") ##Broken Code
        print("The word was:\t" + str(word)) ## Broken Code
        break
if misses >7:
    print("Game Over")
